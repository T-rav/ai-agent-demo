# AI Agent Demo API - Environment Variables
# Copy this file to .env and fill in your actual API keys
# 
# Usage: cp env.example .env

# ================================
# OpenAI Configuration (Required)
# ================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
# Model to use for chat completion (default: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# ================================
# Pinecone Configuration (Required)
# ================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
# Pinecone environment (e.g., us-east-1-aws, gcp-starter)
PINECONE_ENVIRONMENT=your_pinecone_environment_here
# Name of the Pinecone index to use
PINECONE_INDEX_NAME=ai-agent-demo-index

# ================================
# Embedding Configuration
# ================================
# OpenAI embedding model to use
EMBEDDING_MODEL=text-embedding-3-small
# Embedding dimensions (must match your Pinecone index)
EMBEDDING_DIMENSIONS=1536

# ================================
# RAG Configuration
# ================================
# Number of documents to retrieve from vector store
RETRIEVAL_K=5

# ================================
# Tavily Web Search (Optional)
# ================================
# Get your API key from: https://tavily.com/
# If not set, web search functionality will be disabled
TAVILY_API_KEY=your_tavily_api_key_here

# ================================
# LangSmith Observability (Optional)
# ================================
# Get your API key from: https://smith.langchain.com/
# Enable LangSmith tracing for debugging and monitoring
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=ai-agent-demo

# ================================
# Application Configuration
# ================================
# Enable debug mode for development
DEBUG=false
